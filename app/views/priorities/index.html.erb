
<% if @priorities != nil %>

	<div class="columns">
		<% @priorities.each.with_index do |x, y| %>
			<div class="column">
				<div class="box">
					<article class="media">
						<!-- <div class="media-left">
							<br>
							<p><%#= x.total %></p>
						</div> -->
						<% if signed_in? %>
						<div class="media-left">
							<span class="icon is-medium">
								<%= link_to raw("<i class=\"fa fa-arrow-up\" aria-hidden=\"true\"></i>"), priority_votes_path(x.id, "upvote"), method: :post %>
							</span>
							<br>
							<span class="icon is-medium">
								<%= link_to raw("<i class=\"fa fa-arrow-down\" aria-hidden=\"true\"></i>"), priority_votes_path(x.id, "downvote"), method: :post %>
							</span>
						</div>
						<% end %>

						<div class="media-content">
							<div class="content">
								<p>
					   		<b><%= x.title %></b>
								</p>
							</div>
							<nav class="level is-mobile">
				        <div class="level-right">
				          <p class="level-item"><small><%= x.user.nickname %></small></p>
				        </div>
		      		</nav>
						</div>
					</article>
		  	</div>
		  </div>
			
			<% if y > 0 && y % 2 == 0 %>
				</div>
				<div class="columns">
			<% end %>
		<% end %>
	</div>
<% end %>