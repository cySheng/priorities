
<% if @priorities != nil %>

	
		<% @priorities.each.with_index do |x, y| %>
		<div class="columns">
			<div class="column is-4 is-offset-4">
				<div class="box">
					<article class="media">
						<div class="media-left">
							<br>
							<p><%= x.get_upvotes.size.to_i - x.get_downvotes.size.to_i %></p>
						</div>
						<% if signed_in? && !(current_user.voted_for? Priority.find(x.id)) && x.user != current_user %>
						<div class="media-left">
							<span class="icon is-medium">
								<%= link_to raw("<i class=\"fa fa-arrow-up\" aria-hidden=\"true\"></i>"), priority_votes_path(x.id, "up"), method: :post %>
							</span>
							<br>
							<span class="icon is-medium">
								<%= link_to raw("<i class=\"fa fa-arrow-down\" aria-hidden=\"true\"></i>"), priority_votes_path(x.id, "down"), method: :post %>
							</span>
						</div>
						<% end %>

						<div class="media-content">
							<div class="content">
								<p><b><%= x.title %></b></p>
								<p><%= x.content %></p>
							</div>
							<nav class="level is-mobile">
				        <div class="level-right">
				          <p class="level-item"><small><%= x.user.nickname %></small></p>
				        </div>
		      		</nav>
						</div>
					</article>
		  	</div>
		  </div>	
		</div>
	<% end %>
<% end %>