<%= form_for :session, url: session_path do |form| %>
  <div class="text-field field">
    <%= form.label :email, class: 'label' %>
    <p class="control">
      <%= form.text_field :email, type: 'email', class: 'input'%>
    </p>
  </div>

  <div class="password-field field">
    <%= form.label :password, class: 'label' %>
    <p class="control">
      <%= form.password_field :password, class: 'input' %>
    </p>
  </div>

  <div class="submit-field field is-grouped">
    <p class="control">
      <%= form.submit 'Log In', class: 'button is-primary' %>
    </p>

    <% if Clearance.configuration.allow_sign_up? %>
      <p class="control">
        <%= link_to ("Sign_up"), sign_up_path, class: 'button is-link' %>
      </p>
    <% end %>
    <p class="control">
      <%= link_to ("Forgot Password"), new_password_path, class: 'button is-link' %>
    </p>
  </div>

<% end %>
