<div class="columns is-mobile">
<div id="clearance" class="sign-up column is-4 is-offset-4 box">
  <h2><%= t(".title") %></h2>

  <%= form_for @user do |form| %>
    <%= render partial: '/users/form', object: form %>

    <div class="submit-field field is-grouped">
      <p class="control">
        <%= form.submit 'Sign up', class: 'button is-primary' %>
      </p>

      <p class="control">
        <%= link_to t(".sign_in"), sign_in_path, class: 'button is-link' %>
      </p>
    </div>
  <% end %>
</div>
</div>
